{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["server.ts", "src/**/*"]
}
